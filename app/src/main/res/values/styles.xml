<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="NavLabelAppearanceInactive">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NavLabelAppearanceActive">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="SplashScreenTheme" parent = "Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="AlertDialogTheme" parent= "Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/themed_dialog_bg</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

</resources>